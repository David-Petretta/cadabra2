
def test01():
    __cdbkernel__=create_scope()
    \partial{#}::PartialDerivative;
    a::Depends(\partial{#});
    ex:= \int{ \partial_{0}{a} \partial_{0}{a} }{x};
    integrate_by_parts(_, $a$);
    tst:= \int{ -a \partial_{0 0}{a} }{x} - @(ex);
    assert(tst==0)
    print("Test 01 passed")

test01()
        
